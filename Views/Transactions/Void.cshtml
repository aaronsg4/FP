                </dt>

                <dd>
                    @Html.DisplayFor(model => model.SubmitterUserId)
                </dd>

            </dl>

            @using (Html.BeginForm("VoidConfirmed", "Transactions"))
            {
                @Html.AntiForgeryToken()
