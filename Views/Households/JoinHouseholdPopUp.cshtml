
@{
    ViewBag.Title = "JoinHouseholdPopUp";
}

<h4></h4>

@model FP.Models.Household

@{
    ViewBag.Title = "Details";
}


<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><img src="~/img/fp.png" /></h4>
    </div>
    <div class="modal-body">
        <div class="container">
            <div class="row">
            </div>
        </div>
        <div class="logo">
            <h1>Financial<span class="color bold">Planner</span></h1>
            <p class="meta">Your one-stop personal finance-tracking resource</p>
        </div>
@using (Html.BeginForm("JoinHouseholdEmailConfirm", "Households"))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Household</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            &nbsp;&nbsp;&nbsp;&nbsp;Confirm the email that your invitation was sent to.
            <div class="col-md-10">
                @Html.EditorFor(model => model.InvitedEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InvitedEmail, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Join!" class="btn btn-default" />
            </div>
        </div>
    </div>
}
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
</div>