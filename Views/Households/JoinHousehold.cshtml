@model FP.Models.Household

@{
    ViewBag.Title = "Details";
}

@using (Html.BeginForm("JoinHouseholdConfirm", "Households"))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Household</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            Confirm the email that your invitation was sent to.
            <div class="col-md-10">
                @Html.EditorFor(model => model.InvitedEmail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.InvitedEmail, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@foreach (var member in Model.Users)
            {
    @member.FullName <br />
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>











