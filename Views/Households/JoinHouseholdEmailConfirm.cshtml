
@{
    ViewBag.Title = "JoinHouseholdEmailConfirm";
}

<h2>Join your new Household!</h2>

@model FP.Models.Household

@Model.Name<br />
@Model.Description<br />
@foreach (var member in Model.Users)
{
    @member.FullName<br />
}

@using (Html.BeginForm("JoinHouseholdConfirm", "Households"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Household</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Name)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UserId)
        @Html.HiddenFor(model => model.Description)
        @Html.HiddenFor(model =>model.CreatedDate)      
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Join" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>



