
@model FP.Models.Budget
@using Microsoft.AspNet.Identity


@{ var userid = User.Identity.GetUserId();

}


@{
    ViewBag.Title = "BudgetsCreateModal";
}


        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><img src="~/img/fp.png" /></h4>
            </div>
            <div class="modal-body" style="height:600px">
                <div class="container">
                    <div class="row">
                        <div class="container">
                            <div class="logo">
                                <h1><a href="~/index.html">Financial<span class="color bold">Planner</span></a></h1>
                                <p class="meta">Your one-stop personal finance-tracking resource</p><br /><br />
                            </div>                         
                            @using (Html.BeginForm("BudgetsCreate", "Budgets"))
                                 {
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    <h4>Enter a Budget Name</h4>                             
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">                     
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <h4>How much do you want to spend?</h4>
                              
                                    <div class="form-group">   
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <h4>What is this budget for?</h4>
                                    
                                    <div class="form-group">   
                                        <div class="col-md-6">
                                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <h4>Duration</h4>
                                    <div class="form-group">
                                      <div class="col-md-10">
                                            @Html.DropDownList("BudgetDurationPeriodId", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.BudgetDurationPeriodId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>                                
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <input type="submit" value="Create Budget" class="btn btn-default"/>
                                        </div>
                                    </div>
                                </div>
                            }

                         
                        </div><br /><br />

            </div>
            <div class="modal-footer">
             
            </div>
        </div>
    </div>
</div>