
@model FP.Models.Transaction
@using Microsoft.AspNet.Identity


@{ var userid = User.Identity.GetUserId();

}


@{
    ViewBag.Title = "BudgetsItemizeModal";
}




<div id="myModal2" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body" style="height:460px">
                <div class="container">
                    <div class="row">
                        <p>@ViewBag.ItemizeConfirm</p><br />              
                    </div>
                </div>
                <div class="container">    
                    @using (Html.BeginForm())
                          {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            <h4>Add Budget Category</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">                               
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.TransactionCategory.Name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.TransactionCategory, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="submit" value="Add Category" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
            <div class="modal-footer">              
         <button type="button" class="btn btn-default" data-dismiss="modal">Done</button>
            </div>
        </div>
    </div>
</div>