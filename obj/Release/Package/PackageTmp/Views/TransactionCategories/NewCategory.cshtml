
@model FP.Models.TransactionCategory

@{
    ViewBag.Title = "Edit";
}
@{ Layout = null;}

<h2>Edit</h2>

<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><img src="~/img/fp.png" /></h4>


    </div>




    <div class="modal-body">

        <div class="container">
            <div class="row">

            </div>
        </div>



        <div class="logo">
            <h1>Financial<span class="color bold">Planner</span></h1>
            <p class="meta">Your one-stop personal finance-tracking resource</p>
        </div>

        @using (Html.BeginForm("NewCategoryConfirm","TransactionCategories"))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Provide a category for this transaction</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)
                @Html.HiddenFor(model => model.CreatedDate)
                <input type="hidden" name="TransactionId" value="@ViewBag.transactionid" />
                @{ TempData["Data1"] = ViewBag.transactionid;}

              
                <div class="form-group">
                    What is the new category name?
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                Do you want to add a description for the changed name?
                <div class="form-group">

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

